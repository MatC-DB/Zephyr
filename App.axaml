<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:j="clr-namespace:Zephyr.Job;assembly=Zephyr"
             x:Class="Zephyr.App">
  <Application.Styles>
    <FluentTheme Mode="Dark" />
    <Style Selector="Button.highlight">
      <Setter Property="Background" Value="#1693a5" />
    </Style>
    <Style Selector="Button.highlight:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#117381" />
    </Style>
    <Style Selector="Button.highlight:pressed /template/ ContentPresenter">
      <Setter Property="Background" Value="#1AABC0" />
    </Style>
  </Application.Styles>
  <Application.DataTemplates>
    <j:JobControlViewLocator/>
  </Application.DataTemplates>
</Application>